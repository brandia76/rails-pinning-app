<div class="header">
  <h1>
	<i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
	<% if @pin.image? %>
		<%= image_tag("#{@pin.image.url(:medium)}") %>
	<% else %>
		<%= image_tag("#{@pin.category.name}-logo-thumbnail.png") %>
	<% end %>
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.title}", @pin.url, html_options = {target: "_blank"} %>
  </p>
  <p>Created by <%= link_to("#{@creater.full_name}", user_by_email_path(@creater.email)) %></p>
  <p>Repinned by <% @users.each do |user| %>
			<%= link_to("#{user.full_name}", user_by_email_path(user.email))  %>
			<%  end %></p>
	<%= render partial: "shared/repin_form", locals: {pin: @pin} %>
</div>
<br/>
<a href="/">
	<i class="fa fa-home"></i>
  Back to Home
</a>
