<div class="header">
  <h1>
	<i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <img src="<%= @pin.image.url(:medium) %>">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.title}", @pin.url, html_options = {target: "_blank"} %>
  </p>
</div>
<br/>
<a href="/">
	<i class="fa fa-home"></i>
  Back to Home
</a>
