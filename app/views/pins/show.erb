<div class="header">
  <h1>
	<i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
	<% if @pin.image? %>
		<%= image_tag("#{@pin.image.url(:medium)}") %>
	<% else %>
		<%= image_tag("#{@pin.category.name}-logo-thumbnail.png") %>
	<% end %>
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.title}", @pin.url, html_options = {target: "_blank"} %>
  </p>
  <p>Created by <%= "#{@creater}" %></p>
  <p>Repinned by <%= "#{@users}" %></p>
	<%= link_to repin_path(@pin), class: "btn btn-default", method: "post" do %>
		<i class="fa-thumb-tack"></i>
		Repin!
	<% end %>
</div>
<br/>
<a href="/">
	<i class="fa fa-home"></i>
  Back to Home
</a>
