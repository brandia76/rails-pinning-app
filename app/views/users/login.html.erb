<h1>Login to Pin-a-gram</h1>
<% if @errors %>
	<div class="error">
		<% @errors.each do |msg| %>
			<%= "#{msg}" %>
		<% end %>
	</div>
<% end %>

<%= form_tag "/login" do |f| %>
	<div class="form-group">
		<label for="user_email" class="col-sm-1 control-label">Email</label>
		<div class="col-sm-11">
			<%= email_field_tag('email', '', class: 'login') %>
		</div>
	</div>
	<div class="form-group">
		<label for="user_password" class="col-sm-1 control-label">Password</label>
		<div class="col-sm-11">
			<%= password_field_tag('password', class: 'login') %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-11">
			<%= button_tag("Login") %>
		</div>
	</div>
<% end %>

<%= link_to 'Back', users_path %>
